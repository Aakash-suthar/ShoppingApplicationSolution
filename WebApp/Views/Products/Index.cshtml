@model IEnumerable<WebApp.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    
</p>

<div class="col-lg-12">
    <div class="row">
        @foreach (var item in Model)
        {
       
        <div class="col-lg-2" style="margin:5px;height:240px;background-color:cornflowerblue">
            <a asp-action="Details" asp-route-id="@item.Id" style=" all:unset;cursor:pointer">
                <div style="text-align:center;">
                    <h4 style="padding-top:40px">
                        @Html.DisplayFor(modelItem => item.Productname)
                    </h4>
                </div>
                <div style="text-align:center;">
                    <h5 style="padding-top:40px">
                        @Html.DisplayFor(modelItem => item.Price)
                    </h5>
                </div>

                <div style="text-align:center;">
                    <h5 style="padding-top:40px">
                        @Html.DisplayFor(modelItem => item.Productdesciption)
                    </h5>
                </div>
            </a>
        </div>
    
        }
    </div>
        
</div>
